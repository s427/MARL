---
import CloseBtn from './CloseBtn.astro'
import TagsGroup from './tags/TagsGroup.astro';
---

<aside
  class="toots-tags mobile-menu-panel"
  :class="$store.files.listBoostsAuthors.length === 0 ? 'no-boosts' : ''"
  id="panel-tags"
  aria-labelledby="toots-tags-title"
  tabindex="-1"
>
  <CloseBtn />

  <h2
    class="tags-title"
    id="toots-tags-title"
    x-text="$t('tags.panelTitle')"
  ></h2>

  <TagsGroup type="hashtags" />
  <TagsGroup type="mentions" />
  <template x-if="$store.files.listBoostsAuthors.length">
    <TagsGroup type="boosts" />
  </template>
</aside>
